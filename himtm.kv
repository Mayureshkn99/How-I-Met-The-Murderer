#:import window kivy.core.window.Window

WindowManager:
    HomePage:
    HostPage:
    JoinPage:
    LobbyPage:
    RolePage:

<MyButton>
    width: window.size[0]*0.8
    size_hint_y: 1
    pos_hint: {'center_x': 0.5}

<MyBoxLayout>
    size_hint_y: None
    pos_hint: {'top': 1}
    orientation: "vertical"
    spacing: "20dp"

<HomePage>:
    name: "HomePage"
    MyBoxLayout:
        size: root.width, root.height-dp(20)

        MDTopAppBar:
            title:'How I Met The Murderer'
        MyButton:
            text: "Host a Game"
            on_release:
                app.root.current = "HostPage"
                root.manager.transition.direction = "left"
        MyButton:
            text: "Join a Game"
            on_release:
                app.root.current = "JoinPage"
                root.manager.transition.direction = "left"

<HostPage>
    name: "HostPage"
    MyBoxLayout:
        size: root.width, root.height-dp(20)
        MDTopAppBar:
            title:'How I Met The Murderer'
        Label:
        MDTextField:
            id: host_name
            mode: "rectangle"
            text: "Mayu"
            size_hint_x:0.8
            pos_hint: {'center_x': 0.5}
            hint_text: 'Enter Username'
        MDFillRoundFlatButton:
            text: "Host"
            pos_hint: {'center_x': 0.5}
            on_release:
                root.host()
        Label:

<LobbyPage>
    name: "LobbyPage"
    MyBoxLayout:
        size: root.width, root.height-dp(20)
        MDTopAppBar:
            title:'How I Met The Murderer'
        MDLabel:
            id: lobby_name
            text: ""
            size_hint_y: None
            height: "10dp"
            halign: "center"
        BoxLayout:
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            ScrollView:
                GridLayout:
                    id: players_connected
                    height: root.height
                    cols: 1
                    size_hint: 1, None
                    pos_hint: {'center_x': 0.5}
                    MDLabel:
                        text: "Neil"
                        halign: "center"
        MDFillRoundFlatButton:
            text: "Assign Roles"
            width: window.size[0]*0.8
            pos_hint: {'center_x': 0.5}
            on_release:
#                root.assign_roles()
                app.root.current = "RolePage"
                root.manager.transition.direction = "left"

<JoinPage>
    name: "JoinPage"
    MyBoxLayout:
        size: root.width, root.height-dp(20)
        MDTopAppBar:
            title:'How I Met The Murderer'
        MDTextField:
            id: name
            mode: "rectangle"
            text: ""
            size_hint_x:0.75
            pos_hint: {'center_x': 0.5}
            hint_text: 'Enter Username'
        BoxLayout:
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            ScrollView:
                GridLayout:
                    id: players_connected
                    height: root.height
                    cols: 1
                    spacing: "1dp"
                    size_hint: 1, None
                    pos_hint: {'center_x': 0.5}
                    MDRaisedButton:
                        text: "Neil"
                        width: window.size[0]*0.8
                        on_release:
                            root.connect_host("Neil")
                    MDRaisedButton:
                        text: "Shantanu"
                        width: window.size[0]*0.8
                        on_release:
                            root.connect_host("Shantanu")
                    MDRaisedButton:
                        text: "Vedant"
                        width: window.size[0]*0.8
                        on_release:
                            root.connect_host("Vedant")

<RolePage>
    name: "RolePage"
    MyBoxLayout:
        size: root.width, root.height-dp(20)
        MDTopAppBar:
            title:'How I Met The Murderer'
        MDLabel:
            id: role
            text: "Not Assigned"
            halign: "center"
        MDFillRoundFlatButton:
            text: "Exit"
            width: window.size[0]*0.8
            pos_hint: {'center_x': 0.5}
            on_release:
                app.root.current = "HomePage"
                root.manager.transition.direction = "right"